<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Editing <%= campground.title %></h1>
    </div>
    <div class = "col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[title]" placeholder="Title" value = "<%= campground.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Price" value = "<%= campground.price %>" min = "0.01" step = "0.01" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Description" value = "<%= campground.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
</div>

<%- include("../partials/footer") %>